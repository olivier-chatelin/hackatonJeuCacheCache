        </select>
        <select class="form-select mt-4" name ="species" aria-label="Default select example">
            <option selected>Species</option>
            {%for option in available_options.species %}
            <option value = {{ option }} > {{ option }} </option>
            {% endfor %}
        </select>
        <select class="form-select mt-4" name ="hair" aria-label="Default select example">
            <option selected>Hair</option>
            {%for option in available_options.hair %}
            <option value = {{ option }} > {{ option }} </option>
            {% endfor %}
        </select>
        <select class="form-select mt-4" name ="skill1" aria-label="Default select example">
            <option selected>Skill 1</option>
            {%for option in available_options.skill %}
            <option value = {{ option }} > {{ option }} </option>
            {% endfor %}
        </select>
        <div class="col-lg-12 text-center mt-5 mb-4">
        <button type="button" class="btn btn-light">Let's find a lover</button>
        </div>
            <div><br></div>
        </div>
        <div class="col-4"></div>
        </div>
    </form>
{% endblock %}